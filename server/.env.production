
# ==================== .env.production ====================
# Production environment variables

# Application
NODE_ENV=production
PORT=3000
APP_NAME=NestJS Application
APP_URL=https://api.yourdomain.com
API_PREFIX=api/v1

# Database - PostgreSQL (Production)
DB_TYPE=postgres
DB_HOST=your-production-db-host.rds.amazonaws.com
DB_PORT=5432
DB_USERNAME=prod_db_user
DB_PASSWORD=strong-production-password-here
DB_NAME=prod_database
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SSL=true

# TypeORM
TYPEORM_CONNECTION=postgres
TYPEORM_HOST=your-production-db-host.rds.amazonaws.com
TYPEORM_PORT=5432
TYPEORM_USERNAME=prod_db_user
TYPEORM_PASSWORD=strong-production-password-here
TYPEORM_DATABASE=prod_database
TYPEORM_SYNCHRONIZE=false
TYPEORM_LOGGING=false
TYPEORM_ENTITIES=dist/**/*.entity.js
TYPEORM_MIGRATIONS=dist/migrations/*.js
TYPEORM_MIGRATIONS_DIR=src/migrations

# JWT Authentication (Use strong secrets in production)
JWT_SECRET=super-strong-jwt-secret-minimum-32-characters-long-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=super-strong-refresh-secret-minimum-32-characters-long-production
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_SALT_ROUNDS=12

# CORS
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=50

# Email Service (Production)
SENDGRID_API_KEY=your_production_sendgrid_api_key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Your Application

# AWS S3 (Production)
AWS_ACCESS_KEY_ID=your_production_aws_access_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_key
AWS_S3_BUCKET=your-production-bucket
AWS_REGION=us-east-1

# Redis (Production)
REDIS_HOST=your-production-redis-host.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_TTL=3600

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DESTINATION=./uploads

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# OAuth (Production)
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
GOOGLE_CALLBACK_URL=https://api.yourdomain.com/api/v1/auth/google/callback

FACEBOOK_APP_ID=your_production_facebook_app_id
FACEBOOK_APP_SECRET=your_production_facebook_app_secret
FACEBOOK_CALLBACK_URL=https://api.yourdomain.com/api/v1/auth/facebook/callback

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# Swagger Documentation (Disable in production or protect with auth)
SWAGGER_ENABLED=false
SWAGGER_TITLE=API Documentation
SWAGGER_DESCRIPTION=API endpoints documentation
SWAGGER_VERSION=1.0
SWAGGER_PATH=api/docs